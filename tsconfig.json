{
    "compilerOptions": {
        "target": "ES5",
        "sourceMap": true,
        "module": "commonjs",
        "outDir": "lib",
        "noImplicitAny": false,
        "removeComments": false,
        "noLib": false,
        "preserveConstEnums": true,
        "importHelpers": true,
        "experimentalDecorators": true,
        "declaration": false,
        "suppressImplicitAnyIndexErrors": true
    },
    "exclude": [
        "node_modules",
        "docs",
        "coverage",
        "lib",
        "js"
    ]
}
