{
    "compilerOptions": {
        "target": "es6",
        "sourceMap": true,
        "module": "commonjs",
        "outDir": "lib",
        "noImplicitAny": false,
        "removeComments": false,
        "noLib": false,
        "preserveConstEnums": true,
        "importHelpers": true,
        "experimentalDecorators": true,
        "declaration": false,
        "suppressImplicitAnyIndexErrors": true,
        "jsx": "react",
        "jsxFactory": "h"
    },
    "exclude": [
        "node_modules",
        "docs",
        "coverage",
        "lib",
        "js"
    ]
}
