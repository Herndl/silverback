{
  "name": "@gorillabyte/silverback",
  "version": "0.1.1",
  "description": "The Silverback Game Engine is a Typescript entity component framework.",
  "scripts": {
    "commit": "git-cz",
    "build": "webpack --progress --profile --colors --display-error-details --display-cached",
    "build:prod": "webpack --progress --profile --colors --display-error-details --display-cached --config webpack.config.prod.js",
    "dev": "webpack --progress --profile --colors --display-error-details --display-cached --watch",
    "test": "./node_modules/mocha/bin/mocha 'src/**/*.spec.{ts,tsx}' --require ts-node/register --require jsdom-global/register",
    "karma": "karma start --single-run",
    "karma:watch": "karma start",
    "bench": "tsc && node ./js/core/bench/index.js",
    "docs": "typedoc --json typedoc.json --out docs src/**/*.ts --mode modules --target ES6 --tsconfig ./tsconfig.json",
    "lint": "tslint -c tslint.json src/**/*.ts",
    "semantic-release": "semantic-release",
    "examples": "node tools/server.js",
    "travis-deploy-once": "travis-deploy-once"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gorillabyte/silverback.git"
  },
  "engines": {
    "node": ">= 8.5.0"
  },
  "author": {
    "email": "sherndlbauer@gorillabyte.com",
    "name": "Stefan Herndlbauer",
    "url": "http://www.gorillabyte.com"
  },
  "license": "Apache-2.0",
  "main": "./dist/silverback.js",
  "config": {
    "ghooks": {
      "pre-commit": "npm run test"
    },
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog/"
    }
  },
  "keywords": [
    "typescript",
    "game",
    "entity",
    "typescript",
    "server",
    "nodejs",
    "game-server",
    "silverback",
    "framework",
    "engine"
  ],
  "devDependencies": {
    "@types/assertion-error": "^1.0.30",
    "@types/benchmark": "^1.0.31",
    "@types/bluebird": "^3.5.19",
    "@types/chai": "^4.1.0",
    "@types/express": "^4.11.0",
    "@types/karma": "^1.7.3",
    "@types/mime": "^2.0.0",
    "@types/mocha": "^2.2.46",
    "@types/node": "^9.3.0",
    "@types/pixi.js": "^4.6.3",
    "@types/serve-static": "^1.13.1",
    "babel-core": "^6.10.4",
    "babel-loader": "^7.1.2",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "benchmark": "^2.1.0",
    "chai": "^4.1.2",
    "commitizen": "2.9.6",
    "cz-conventional-changelog": "2.1.0",
    "express": "^4.16.2",
    "ghooks": "2.0.2",
    "istanbul": "^1.1.0-alpha.1",
    "istanbul-instrumenter-loader": "^3.0.0",
    "jasmine-core": "^2.4.1",
    "jsdom": "11.5.1",
    "jsdom-global": "3.0.2",
    "karma": "^2.0.0",
    "karma-chai": "^0.1.0",
    "karma-coverage": "^1.0.0",
    "karma-coverage-istanbul-reporter": "^1.3.3",
    "karma-jasmine": "^1.0.2",
    "karma-mocha": "^1.1.1",
    "karma-mocha-reporter": "^2.0.4",
    "karma-phantomjs-launcher": "^1.0.1",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-spec-reporter": "0.0.32",
    "karma-webpack": "^2.0.9",
    "mocha": "^4.1.0",
    "phantomjs": "^2.1.7",
    "semantic-release": "^12.2.2",
    "ts-loader": "^3.2.0",
    "ts-node": "^4.1.0",
    "tslint": "^5.8.0",
    "typedoc": "^0.9.0",
    "typescript": "^2.6.2",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.10.1",
    "travis-deploy-once": "^4.3.2"
  },
  "dependencies": {
    "mini-signals": "^1.1.1"
  }
}
