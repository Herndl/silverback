{
  "name": "silverback",
  "version": "0.0.8",
  "description": "The Silverback Game Engine is a Typescript entity component framework.",
  "scripts": {
    "commit": "git-cz",
    "build": "webpack --progress --profile --colors --display-error-details --display-cached",
    "build:prod": "webpack --progress --profile --colors --display-error-details --display-cached --optimize-minimize",
    "watch": "webpack --progress --profile --colors --display-error-details --display-cached --watch",
    "test": "karma start --single-run",
    "test:watch": "karma start",
    "bench": "tsc && node ./js/core/bench/index.js",
    "docs": "typedoc --options typedoc.json src/**/*.ts",
    "lint": "tslint -c tslint.json src/**/*.ts",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Herndl/silverback.git"
  },
  "engines": {
    "node": ">= 8.5.0"
  },
  "author": {
    "email": "sherndlbauer@gorillabyte.com",
    "name": "Stefan Herndlbauer",
    "url": "http://www.gorillabyte.com"
  },
  "license": "MIT",
  "main": "./lib/silverback.js",
  "config": {
    "ghooks": {
      "pre-commit": "npm run test"
    },
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog/"
    }
  },
  "keywords": [
    "typescript",
    "game",
    "entity",
    "typescript",
    "server",
    "nodejs",
    "game-server",
    "silverback",
    "framework",
    "engine"
  ],
  "devDependencies": {
    "babel-core": "^6.10.4",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "benchmark": "^2.1.0",
    "chai": "^4.1.2",
    "commitizen": "2.9.6",
    "cz-conventional-changelog": "2.1.0",
    "ghooks": "2.0.2",
    "istanbul": "^1.1.0-alpha.1",
    "istanbul-instrumenter-loader": "^3.0.0",
    "jasmine-core": "^2.4.1",
    "karma": "^2.0.0",
    "karma-chai": "^0.1.0",
    "karma-commonjs": "1.0.0",
    "karma-coverage": "^1.0.0",
    "karma-coverage-istanbul-reporter": "^1.3.3",
    "karma-jasmine": "^1.0.2",
    "karma-mocha": "^1.1.1",
    "karma-mocha-reporter": "^2.0.4",
    "karma-phantomjs-launcher": "^1.0.1",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-spec-reporter": "0.0.32",
    "karma-webpack": "^2.0.9",
    "mocha": "^4.1.0",
    "phantomjs": "^2.1.7",
    "semantic-release": "^11.0.2",
    "ts-loader": "^3.2.0",
    "tslint": "^5.8.0",
    "typedoc": "^0.9.0",
    "typescript": "^2.6.2",
    "typings": "^2.1.1",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.10.1"
  },
  "dependencies": {
    "mini-signals": "^1.1.1"
  }
}
